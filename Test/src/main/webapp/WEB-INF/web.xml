<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <!--类名-->
    <servlet-name>HelloServlet</servlet-name>
    <!--包名-->
    <servlet-class>com.kuanquan.servlet.HelloServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/fly/HelloServlet</url-pattern>
  </servlet-mapping>

  <!--默认首页地址-->
  <welcome-file-list>
    <!--<welcome-file>JspLift.jsp</welcome-file>-->
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
